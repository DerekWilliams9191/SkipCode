{
  "manifest_version": 3,
  "name": "WSU OKTA Auto-Fill",
  "version": "1.0",
  "description": "Automatically fills and submits 2FA codes for WSU login",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://login.wsu.edu/*"],
  "content_scripts": [
    {
      "matches": ["*://login.wsu.edu/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WSU OKTA Auto-Fill",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png", 
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
